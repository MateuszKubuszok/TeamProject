<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Milestone</th>
    <th>User</th>
    <th>Deadline</th>
    <% if meet_team_requirements?(:manage_tickets) %>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= link_to ticket.name, project_milestone_ticket_path(@project.url_name, @milestone.id, ticket.id) %></td>
    <td><%= ticket.description %></td>
    <td><%= link_to ticket.milestone.name, project_milestone_path(@project.url_name, @milestone.id) %></td>
    <td><%= link_to ticket.user.login, user_path(ticket.user.url_name) %></td>
    <td><%= ticket.deadline %></td>
    <% if meet_team_requirements?(:manage_tickets) %>
    <td><%= link_to 'Edit', edit_project_milestone_ticket_path(@project.url_name, @milestone.id, ticket.id) %></td>
    <td><%= link_to 'Destroy', project_milestone_ticket_path(@project.url_name, @milestone.id, ticket.id), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ticket', new_project_milestone_ticket_path(@project.url_name, @milestone.id) %>
