<div id="navigationBar">
  <%= link_to "All projects", projects_path %> |
  <%= link_to "My projects", my_projects_path %> >
  <%= current_project.name %><% if meet_team_requirements? :manage_project %> (<%= link_to "edit", edit_project_path(current_project.url_name) %>)<% end %> >
  <%= link_to "Bugtracker", project_bugs_path(current_project.url_name) %> >
  <%= link_to @bug.short_description, project_bug_path(current_project.url_name, @bug.id) %> >
  edit
</div>
<div id="content" class="clearfix">
  <h3>Editing project <%= link_to current_project.name, project_path(current_project.url_name) %> bug <%= @bug.short_description %></h3>

  <%= render 'form' %>

  <%= link_to content_tag(:span, "Scroll up"), "#mainFrame", id: "contentEnd" %>
</div>
